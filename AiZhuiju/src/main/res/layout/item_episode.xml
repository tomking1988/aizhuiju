<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/click_background"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:id="@+id/show_image"
        android:layout_alignParentLeft="true"
        android:src="@drawable/movie_default_small"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_image"
        android:layout_marginLeft="5dp"
        android:text="episode 00x00"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:maxLines="2"
        android:id="@+id/episode_number"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/episode_number"
        android:text="episode name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_alignLeft="@+id/episode_number"
        android:id="@+id/episode_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/episode_name"
        android:layout_below="@+id/episode_name"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:text="pubdate"
        android:id="@+id/pubdate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/episode_number"
        android:text="搜索中"
        android:id="@+id/episode_video"
        android:visibility="gone"
        android:layout_alignParentTop="true"/>


</RelativeLayout>