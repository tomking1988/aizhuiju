<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="90dp"

    android:paddingLeft="5dp"
    android:background="#f3f3f3"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/background_rightbar"
        android:id="@+id/show_group"

        android:layout_marginLeft="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/movie_default_small"
                android:id="@+id/show_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:width="180dp"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:id="@+id/show_title"
                android:text="show_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/show_image"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/show_original_title"
                android:text="original title"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/show_title"
                android:layout_below="@+id/show_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_rating"
                android:text="original title"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/show_title"
                android:layout_below="@+id/show_original_title"
                />
        </RelativeLayout>
    </LinearLayout>


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:id="@+id/add_show"
        android:src="@drawable/ic_action_new_light"
        android:background="@drawable/button_background"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/show_group"

        />
</RelativeLayout>